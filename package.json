{
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "prepare": "npm run gen:domains-client",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "lint-fix": "eslint --fix --ext .js,.jsx,.ts,.tsx ./src",
    "format": "prettier --write ./src",
    "gen:domains-client": "openapi-generator-cli generate -i https://raw.githubusercontent.com/Schumann-IT/dehydrated-api-go/refs/heads/main/docs/swagger.json -g typescript-fetch -o src/resources/domains/data-provider/client",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --reporter=verbose",
    "test:watch": "vitest --watch",
    "test:run": "vitest --run",
    "pre-commit": "npm run clean && npm run prepare && npm run format && npm run lint-fix && npm run test && npm run build"
  },
  "dependencies": {
    "@azure/msal-react": "^3.0.15",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "ra-auth-msal": "^3.1.0",
    "ra-data-simple-rest": "^5.7.3",
    "react": "^19.0.0",
    "react-admin": "^5.7.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "react-router": "^7.1.3",
    "react-router-dom": "^7.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.15.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@vitejs/plugin-react": "^4.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "dotenv": "^17.2.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.3",
    "terser": "^5.43.1",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.28.0",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "name": "dehydrated-frontend"
}
